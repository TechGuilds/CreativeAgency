@{
    var dataSource = Html.Sitecore().CurrentItem;
}

<nav id="mainNav"
     class="navbar navbar-default navbar-custom navbar-fixed-top" @(Sitecore.Context.PageMode.IsExperienceEditor ? "style=top:auto;position:inherit" : "")>
    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header page-scroll">
            <button type="button"
                    class="navbar-toggle"
                    data-toggle="collapse"
                    data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span> @Html.Sitecore().Field("MenuText")
                <i class="fa fa-bars"></i>
            </button>
            <a class="navbar-brand page-scroll" href="#page-top">@Html.Sitecore().Field("BrandName")</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
                <li class="hidden">
                    <a href="#page-top"></a>
                </li>
                @foreach (Item item in dataSource.Children)
                {
                    <li>
                        @Html.Sitecore().Field("Link", item, new { @class = "page-scroll" })
                    </li>
                }

            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container-fluid -->
</nav>
